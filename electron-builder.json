{
  "appId": "cc.flowm",
  "asar": true,
  "directories": {
    "output": "release/${version}"
  },
  "files": [
    "dist-electron",
    "dist",
    "drizzle"
  ],
  "mac": {
    "artifactName": "${productName}_${version}_${arch}.${ext}",
    "target": [
      {
        "target": "default",
        "arch": [
          "x64",
          "arm64"
        ]
      }
    ]
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": [
          "x64"
        ]
      }
    ],
    "artifactName": "${productName}_${version}.${ext}"
  },
  "nsis": {
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true,
    "deleteAppDataOnUninstall": false
  }
}